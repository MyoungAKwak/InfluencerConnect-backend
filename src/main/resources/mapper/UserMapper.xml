<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.experience_platform.user.mapper.UserMapper">

    <!-- 결과 매핑 -->
    <resultMap id="UserResultMap" type="com.example.experience_platform.user.vo.UserVo">
        <id property="userId" column="user_id"/>
        <result property="loginId" column="login_id"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="gender" column="gender"/>
    </resultMap>


    <!-- 회원 정보 저장 (회원가입)  -->
    <insert id="insert" parameterType="com.example.experience_platform.user.vo.UserVo">
        INSERT INTO users
            (user_id,
            login_id,
            password,
            name,
            email,
            gender)
        VALUES
            (users_seq.NEXTVAL,
            #{loginId},
            #{password},
            #{name},
            #{email},
            #{gender}
            )
    </insert>

    <!-- 회원 수 카운팅 (ID 중복 체크) -->
    <select id="countByLoginId" parameterType="string" resultType="int">
        SELECT
            COUNT(*)
        FROM
            users
        WHERE
            login_id = #{loginId}
    </select>

    <!-- 로그인   -->
    <select id="findUserForLogin" parameterType="String"
            resultType="com.example.experience_platform.user.vo.UserVo">
        SELECT
            login_id,
            password,
            name,
            email
        FROM
            users
        WHERE
            login_id = #{loginId}
    </select>

    <!-- 회원 상세정보 조회 -->
    <select id="findByLoginId" parameterType="string" resultMap="UserResultMap">
        SELECT
            loginId,
            password,
            name,
            email,
            gender
        FROM users
        WHERE login_id = #{loginid}
    </select>

    <!-- 회원 정보 수정 -->
    <update id="update" parameterType="com.example.experience_platform.user.vo.UserVo">
        UPDATE USERS
            SET
            name = #{name},
            email = #{email},
            gender = #{gender}
        WHERE
            login_id = #{loginid}
    </update>

